<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="optionlayout">
	 <item name="android:layout_height">wrap_content</item>
	 <item name="android:layout_width">match_parent</item>
	 <item name="android:orientation">horizontal</item>
	 <item name="android:layout_marginLeft">40dip</item>
</style>
<style name="digiclock">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:textColor">@color/white</item>
	<item name="android:textSize">60dip</item>
	<item name="android:shadowColor">#000000</item>
	<item name="android:shadowDx">2</item>
	<item name="android:shadowDy">2</item>
	<item name="android:shadowRadius">1</item>
</style>
<style name="digiclock.small">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:textSize">20dip</item>
</style>
<style name="optiontxtview">
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">50dip</item>
	<item name="android:layout_marginLeft">5dip</item>
	<item name="android:layout_marginTop">10dip</item>
	<item name="android:textSize">35dip</item>
	<item name="android:textColor">@color/white</item>
<!--	<item name="android:shadowColor">#000000</item>-->
<!--	<item name="android:shadowDx">2</item>-->
<!--	<item name="android:shadowDy">2</item>-->
<!--	<item name="android:shadowRadius">1</item>-->
</style>
<style name="optiontxtview.dialog"> 
    <item name="android:textSize">20dip</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">10dip</item>
    <item name="android:textColor">@color/grey</item>
</style>
<style name="dialogicon">
	<item name="android:layout_width">50dip</item>
	<item name="android:layout_height">50dip</item>
	<item name="android:gravity">center_vertical</item>
</style>
<style name="socialnetwork">
	<item name="android:layout_height">fill_parent</item>
	<item name="android:orientation">horizontal</item>
	<item name="android:layout_width">fill_parent</item>
	<item name="android:background">@color/white</item>
	<item name="android:focusable">true</item>
	<item name="android:clickable">true</item>
</style>
<style name="alarminfotxt">
	<item name="android:layout_width">match_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:gravity">center_horizontal</item>
	<item name="android:textColor">@color/snow</item>
	<item name="android:textSize">20dip</item>
	<item name="android:shadowColor">#000000</item>
	<item name="android:shadowDx">1</item>
	<item name="android:shadowDy">1</item>
	<item name="android:shadowRadius">1</item>
</style>

<style name="optionbtn">
 	<item name="android:layout_width">60dip</item>
 	<item name="android:layout_height">60dip</item>
 	<item name="android:gravity">center</item>
 	<item name="android:layout_marginLeft">10dip</item>
 	<item name="android:layout_marginRight">10dip</item>
</style>
<style name="viewsliperchild">
	<item name="android:layout_height">match_parent</item>
	<item name="android:layout_width">match_parent</item>
	<item name="android:orientation">vertical</item>
	<item name="android:gravity">center_horizontal</item>
</style>


<style name="viewsliperchild.sub">
	<item name="android:layout_marginLeft">35dip</item>
	<item name="android:layout_marginRight">35dip</item>
	<item name="android:background">@drawable/viewslider_bg</item> 
</style>

<style name="ccWindowTitleBackground">
    <item name="android:background">#BFBFBF</item>
</style>
<style name="newsAlarmTitleBar" parent="android:Theme.NoTitleBar">
<!-- 	<item name="android:windowTitleBackgroundStyle">@style/ccWindowTitleBackground</item> -->
</style>

<style name="timewheel">
	<item name="android:layout_height">80dip</item>
	<item name="android:layout_width">20dip</item>
    <item name="android:layout_gravity">center_vertical</item>
	<item name="android:background">@drawable/wheel_bg</item>
	<item name="android:layout_weight">1</item>
</style>
<style name="pageindicator">
	<item name="android:background">@drawable/page_unselect</item>
	<item name="android:layout_width">wrap_content</item>
	<item name="android:layout_height">wrap_content</item>
</style>
   <style name="alertDialogCustom" parent="@android:style/AlertDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
